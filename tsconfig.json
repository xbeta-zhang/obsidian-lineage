{
	"compilerOptions": {
		"types": [
			"svelte",
			"node"
		],
		"paths": {
			"src/*": ["src/*"]
		},
		"baseUrl": ".",
		//		"inlineSourceMap": true,
		//		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
      "allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"e2e/**/*.ts"
	],
	"exclude": ["temp","node_modules"]
}
